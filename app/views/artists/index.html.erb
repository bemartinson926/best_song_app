<%= link_to 'Add a new artist', new_artist_path %>

<h2>Current Artists:</h2>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Hometown</th>
      <th>Current Hairstyle</th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= link_to artist.full_name, artist_path(artist) %></td>
        <td><%= artist.home_town %></td>
        <td><%= artist.current_hairstyle %></td>
      </tr>
    <% end %>
  </tbody>
</table>
